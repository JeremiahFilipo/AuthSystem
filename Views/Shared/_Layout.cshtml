                    <a class="navbar-brand" asp-area="" asp-controller="Teachers" asp-action="Teachers">Teachers</a>
                    <div class="d-sm-inline-flex flex-sm-row-reverse">
                    </div>
                    <a class="navbar-brand" asp-area="" asp-controller="Students" asp-action="Students">Students</a>
